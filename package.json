{
  "name": "Ethibox",
  "homepage": "https://github.com/ethibox/ethibox/",
  "description": "Open-source web apps hoster",
  "version": "0.0.0-development",
  "author": "@johackim",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethibox/ethibox"
  },
  "bugs": {
    "url": "https://github.com/ethibox/ethibox/issues"
  },
  "keywords": [
    "ethibox",
    "hosting",
    "next.js",
    "react",
    "docker",
    "stripe",
    "portainer",
    "tailwindcss",
    "open-source"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "rollup -c --bundleConfigAsCjs",
    "start": "next start",
    "start:cron": "node lib/cron.cjs",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "cypress run",
    "test:unit": "jest --forceExit -i __tests__/unit/*.spec.js",
    "test:ci": "concurrently -k -s first \"npm run dev\" \"npm run test\""
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@johackim/design-system": "^1.31.0",
    "bcrypt": "^5.1.0",
    "cron": "^2.3.0",
    "dotenv": "^16.0.3",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mariadb": "^3.1.1",
    "next": "~13.2.4",
    "prom-client": "^14.2.0",
    "react-confetti": "^6.1.0",
    "react-i18next": "^12.2.0",
    "sequelize": "^6.30.0",
    "sqlite3": "^5.1.6",
    "stripe": "^11.17.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.4",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "concurrently": "^8.0.1",
    "cypress": "^12.9.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "eslint-import-resolver-jsconfig": "^1.1.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "esm-wallaby": "^3.2.26",
    "i18next": "^22.4.13",
    "jest": "^29.5.0",
    "jose": "^4.13.1",
    "nock": "^13.3.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "puppeteer": "^19.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "rollup": "^3.21.0",
    "tailwindcss": "^3.3.1"
  },
  "jest": {
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "configFile": "./__tests__/unit/babel.config.js"
        }
      ]
    },
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
      "^@lib(.*)$": "<rootDir>/lib/$1",
      "^@api(.*)$": "<rootDir>/pages/api/$1"
    }
  },
  "release": {
    "tagFormat": "${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
